n = int(input("Skriv ett tal du vill undersöka!: "))
sum1 = 0
for i in range (1, n):
    if (n % i == 0):
        sum1 = sum1 + i
if (sum1 == n):
    print("Det här talet är perfekt!")
elif (sum1 < n):
    print("Det här talet är omättat!")
elif (sum1 > n):
    print("Det här talet är mättat!")
